extends ../layouts/default

block main
  include ../components/banner-link/banner-link
  .row
    h2 User
  form(method="POST", action="/add/user")
    .row
      .six.columns
        label Username:
        input.u-full-width(type="text", name="Username" id="Username")
      .six.columns
        label Email:
        input.u-full-width(type="text", name="Email", id="Email")
    .row
      .six.columns
        label First Name:
        input.u-full-width(type="text", name="FirstName", id="FirstName")
      .six.columns
        label Last Name:
        input.u-full-width(type="text", name="LastName", id="LastName")

    .row
      button(type="Submit") Submit
      a.button.button-primary(href="/users")
        | see users
 